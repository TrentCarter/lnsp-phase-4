{
  "project": {
    "metadata": {
      "id": "VMMoE_Analogical_V1p19",
      "name": "VMMoE Analogical Reasoning Training v1.19 - Architecture + Data Fix",
      "description": "BREAKTHROUGH: Combines V1.18 working architecture with V1.14+ analogical reasoning datasets. Root cause fixed!",
      "version": "1.19.0",
      "created_date": "2025-08-17",
      "training_date": "2025-08-17T21:xx",
      "notes": "Solution: V1.18 simple architecture (3-layer, learned posenc) + analogical training data (SAT, BATS, Turney, HyperLex) instead of ConceptNet relations"
    },
    "model": "sentence-transformers/gtr-t5-base",
    "local_model_path": "data/teacher_models/gtr-t5-base"
  },
  "training": {
    "architecture": {
      "mamba_config": {
        "d_model": 768,
        "n_layers": 3,
        "d_state": 16,
        "d_conv": 4,
        "expand": 1.5,
        "dt_rank": "auto",
        "dt_min": 0.001,
        "dt_max": 0.1,
        "dt_init": "xavier",
        "dt_scale": 1.0,
        "bias": false,
        "conv_bias": true,
        "dropout": 0.1,
        "layer_norm_epsilon": 1e-5
      },
      "positional_config": {
        "mode": "learned",
        "max_len": 512,
        "dropout": 0.05,
        "learned_config": {
          "embedding_dim": 768,
          "max_position_embeddings": 512
        }
      },
      "peft_config": {
        "enabled": false
      }
    },
    "loss_config": {
      "loss_type": "triplet",
      "margin_start": 0.05,
      "margin_end": 0.15,
      "margin_schedule": "linear",
      "cosine_weight": 0.7,
      "mse_weight": 0.2,
      "contrastive_weight": 0.1,
      "positive_clustering_weight": 0.05,
      "orthogonality_weight": 0.01,
      "arithmetic_weight": 0.1,
      "temperature": 0.1,
      "label_smoothing": 0.0,
      "normalization_enforcement": {
        "enabled": true,
        "l2_penalty_weight": 0.002,
        "cosine_similarity_threshold": 0.9,
        "normalize_embeddings": false,
        "stability_epsilon": 1e-8,
        "unit_norm_final": true
      }
    },
    "optimization": {
      "optimizer": "AdamW",
      "learning_rate": 5e-05,
      "weight_decay": 0.01,
      "gradient_clipping": 1.0,
      "warmup_steps": 200,
      "scheduler": "constant_with_warmup",
      "betas": [0.9, 0.95],
      "eps": 1e-08
    },
    "data": {
      "batch_size": 16,
      "sequence_length": 16,
      "num_workers": 2,
      "shuffle": true,
      "drop_last": true,
      "concept_databases": [
        "data/databases/sat_analogies_768_training",
        "data/databases/turney_lra_768_training",
        "data/databases/bats_768_training",
        "data/databases/hyperlex_768_training",
        "data/databases/qa_training_triplets_768d"
      ],
      "database_weighting": {
        "enabled": true,
        "balance_factor": 0.8,
        "rotation_cycle": 1000,
        "weights": {
          "sat_analogies_768_training": 0.25,
          "turney_lra_768_training": 0.25,
          "bats_768_training": 0.25,
          "hyperlex_768_training": 0.15,
          "qa_training_triplets_768d": 0.10
        }
      },
      "augmentation": {
        "enabled": false
      }
    },
    "training_params": {
      "epochs": 2,
      "steps_per_epoch": 1000,
      "validation_frequency": 1,
      "checkpoint_frequency": 200,
      "device_priority": [
        "mps",
        "cuda",
        "cpu"
      ],
      "seed": 42,
      "deterministic": false
    },
    "early_stopping": {
      "enabled": true,
      "patience": 2,
      "min_delta": 0.001,
      "monitor": "val/anchor_positive_distance",
      "mode": "min",
      "min_epochs": 1,
      "verbose": true,
      "restore_best_weights": true,
      "additional_criteria": {
        "max_d_ap": 0.03,
        "min_d_an": 0.15,
        "max_overfit_ratio": 2.5,
        "min_ap_cos": 0.9
      },
      "intra_epoch": {
        "enabled": true,
        "min_cos_similarity": 0.85,
        "max_norm_ratio": 2.5,
        "degradation_patience": 3,
        "min_degradation_threshold": 0.02,
        "positive_clustering_threshold": 0.0,
        "generalization_threshold": 0.25
      }
    },
    "regularization": {
      "dropout": 0.1,
      "attention_dropout": 0.05,
      "weight_decay": 0.01,
      "gradient_noise": {
        "enabled": false
      }
    },
    "logging": {
      "level": "INFO",
      "log_interval": 50,
      "save_model_checkpoints": true,
      "save_optimizer_state": false,
      "wandb": {
        "enabled": false
      },
      "mlflow": {
        "enabled": true,
        "experiment_name": "VMMoE_Analogical_v1p19",
        "run_name": "Analogical_Reasoning_Training",
        "tracking_uri": "sqlite:///mlflow.db",
        "artifact_location": "output/test/mlflow/artifacts"
      }
    }
  },
  "evaluation": {
    "validation_split": 0.1,
    "metrics": ["cosine_similarity", "triplet_accuracy", "vector_arithmetic_accuracy"],
    "eval_frequency": 1
  },
  "mlflow": {
    "enabled": true,
    "experiment_name": "VMMoE_Analogical_v1p19",
    "run_name_prefix": "Analogical_Fix",
    "tracking_uri": "sqlite:///mlflow.db",
    "artifact_location": "output/test/mlflow/artifacts",
    "log_parameters": true,
    "log_metrics_frequency": 1,
    "log_models": true,
    "log_artifacts": true
  },
  "checkpointing": {
    "enabled": true,
    "save_frequency": 200,
    "max_checkpoints": 5,
    "save_optimizer": false
  },
  "outputs": {
    "model_save_path": "output/vmmoe_analogical_v1p19",
    "logs_path": "output/logs",
    "plots_path": "output/plots",
    "checkpoints_path": "output/checkpoints"
  }
}