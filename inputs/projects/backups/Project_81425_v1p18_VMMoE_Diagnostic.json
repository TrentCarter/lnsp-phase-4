{
  "project": {
    "metadata": {
      "id": "VMMoE_Diagnostic_V1p18",
      "name": "VMMoE Diagnostic Training v1.18 - Identity Preservation Test",
      "description": "Minimal complexity training to verify basic semantic learning capability before adding analogical reasoning",
      "version": "1.18.0",
      "created_date": "2025-08-17",
      "training_date": "2025-08-17T18:xx",
      "notes": "Diagnostic approach: minimal architecture, identity loss only, single database, verify model can learn to preserve semantic meaning"
    },
    "model": "sentence-transformers/gtr-t5-base",
    "local_model_path": "data/teacher_models/gtr-t5-base"
  },
  "training": {
    "architecture": {
      "mamba_config": {
        "d_model": 768,
        "n_layers": 3,
        "d_state": 16,
        "d_conv": 4,
        "expand": 1.5,
        "dt_rank": "auto",
        "dt_min": 0.001,
        "dt_max": 0.1,
        "dt_init": "xavier",
        "dt_scale": 1.0,
        "bias": false,
        "conv_bias": true,
        "dropout": 0.1,
        "layer_norm_epsilon": 1e-5
      },
      "positional_config": {
        "mode": "learned",
        "max_len": 512,
        "dropout": 0.05,
        "learned_config": {
          "embedding_dim": 768,
          "max_position_embeddings": 512
        }
      },
      "peft_config": {
        "enabled": false
      }
    },
    "loss_config": {
      "loss_type": "triplet",
      "margin_start": 0.01,
      "margin_end": 0.01,
      "margin_schedule": "constant",
      "cosine_weight": 0.9,
      "mse_weight": 0.1,
      "contrastive_weight": 0.0,
      "positive_clustering_weight": 0.0,
      "orthogonality_weight": 0.0,
      "arithmetic_weight": 0.0,
      "temperature": 0.1,
      "label_smoothing": 0.0,
      "normalization_enforcement": {
        "enabled": true,
        "l2_penalty_weight": 0.001,
        "cosine_similarity_threshold": 0.95,
        "normalize_embeddings": false,
        "stability_epsilon": 1e-8,
        "unit_norm_final": false
      }
    },
    "optimization": {
      "optimizer": "AdamW",
      "learning_rate": 1e-04,
      "weight_decay": 0.01,
      "gradient_clipping": 1.0,
      "warmup_steps": 100,
      "scheduler": "constant_with_warmup",
      "betas": [0.9, 0.95],
      "eps": 1e-08
    },
    "data": {
      "batch_size": 16,
      "sequence_length": 16,
      "num_workers": 2,
      "shuffle": true,
      "drop_last": true,
      "concept_databases": [
        "data/databases/concept_vector_db_768_training"
      ],
      "database_weighting": {
        "enabled": false
      },
      "augmentation": {
        "enabled": false
      }
    },
    "training_params": {
      "epochs": 1,
      "steps_per_epoch": 500,
      "validation_frequency": 1,
      "checkpoint_frequency": 100,
      "device_priority": [
        "mps",
        "cuda",
        "cpu"
      ],
      "seed": 42,
      "deterministic": false
    },
    "early_stopping": {
      "enabled": true,
      "patience": 3,
      "min_delta": 0.001,
      "monitor": "val/loss",
      "mode": "min",
      "min_epochs": 1,
      "verbose": true,
      "restore_best_weights": true,
      "additional_criteria": {
        "max_d_ap": 0.05,
        "min_d_an": 0.1,
        "max_overfit_ratio": 2.0,
        "min_ap_cos": 0.95
      },
      "intra_epoch": {
        "enabled": true,
        "min_cos_similarity": 0.9,
        "max_norm_ratio": 3.0,
        "degradation_patience": 2,
        "min_degradation_threshold": 0.02,
        "positive_clustering_threshold": 0.0,
        "generalization_threshold": 0.20
      }
    },
    "regularization": {
      "dropout": 0.1,
      "attention_dropout": 0.05,
      "weight_decay": 0.01,
      "gradient_noise": {
        "enabled": false
      }
    },
    "logging": {
      "level": "INFO",
      "log_interval": 25,
      "save_model_checkpoints": true,
      "save_optimizer_state": false,
      "wandb": {
        "enabled": false
      },
      "mlflow": {
        "enabled": true,
        "experiment_name": "VMMoE_Diagnostic_v1p18",
        "run_name": "Identity_Learning_Test",
        "tracking_uri": "sqlite:///mlflow.db",
        "artifact_location": "output/test/mlflow/artifacts"
      }
    }
  },
  "evaluation": {
    "validation_split": 0.1,
    "metrics": ["cosine_similarity", "triplet_accuracy", "vector_arithmetic_accuracy"],
    "eval_frequency": 1
  },
  "mlflow": {
    "enabled": true,
    "experiment_name": "VMMoE_Diagnostic_v1p18",
    "run_name_prefix": "Identity_Test",
    "tracking_uri": "sqlite:///mlflow.db",
    "artifact_location": "output/test/mlflow/artifacts",
    "log_parameters": true,
    "log_metrics_frequency": 1,
    "log_models": true,
    "log_artifacts": true
  },
  "checkpointing": {
    "enabled": true,
    "save_frequency": 100,
    "max_checkpoints": 5,
    "save_optimizer": false
  },
  "outputs": {
    "model_save_path": "output/vmmoe_diagnostic_v1p18",
    "logs_path": "output/logs",
    "plots_path": "output/plots",
    "checkpoints_path": "output/checkpoints"
  }
}