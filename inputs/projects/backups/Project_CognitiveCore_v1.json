{
    "project": {
      "name": "CognitiveCore_v1_CrawlPhase",
      "version": "1.0",
      "description": "Initial 'Crawl' phase implementation of the Cognitive Core. A Mamba MoE model designed to reason in latent space using (Task, Modifier, Data) concept triplets.",
      "timestamp": "2025-08-28T20:00:00",
      "author": "AI Assistant + User",
      "tags": ["CognitiveCore", "MambaMoE", "CrawlPhase", "TripletInput"]
    },
    "training": {
      "patience": 10,
      "epochs": 150,
      "batch_size": 4, 
      "learning_rate": 5e-5,
      "optimizer": "AdamW",
      "scheduler": "CosineAnnealingLR",
      "device_priority": ["mps", "cuda", "cpu"],
      "log_every_n_steps": 5
    },
    "data": {
      "type": "triplet_concept_sequences",
      "path": "data/crawl_phase_dataset.sqlite",
      "sequence_length": 4,
      "validation_split": 0.2
    },
    "architecture": {
      "model_type": "CognitiveCoreMambaMoE",
      "embedding_dim": 768,
  
      "instruction_fusion_module": {
        "type": "CrossAttention",
        "embed_dim": 768,
        "num_heads": 8,
        "dropout": 0.1,
        "output_dim": 768,
        "comment": "Fuses (V_Task, V_Modifier, V_Data) into a single V_Instruction vector."
      },
  
      "mamba_moe_processor": {
        "d_model": 768,
        "n_layers": 4,
        "d_state": 16,
        "expand": 2,
        "num_experts": 4,
        "top_k_experts": 2,
        "comment": "The core reasoning engine. Processes sequences of V_Instruction vectors."
      },
  
      "response_deconstruction_module": {
        "type": "MultiHeadedMLP",
        "input_dim": 768,
        "heads": {
          "task": {
            "hidden_dims": [1024],
            "output_dim": 768,
            "activation": "GELU",
            "dropout": 0.1
          },
          "modifier": {
            "hidden_dims": [1024],
            "output_dim": 768,
            "activation": "GELU",
            "dropout": 0.1
          },
          "data": {
            "hidden_dims": [2048, 1024],
            "output_dim": 768,
            "activation": "GELU",
            "dropout": 0.1
          }
        },
        "comment": "Deconstructs the final V_Thought into the three response vectors."
      }
    },
    "loss_config": {
      "type": "MultiTaskCosineEmbeddingLoss",
      "weights": {
        "task_loss": 0.25,
        "modifier_loss": 0.25,
        "data_loss": 0.50
      },
      "reduction": "mean",
      "comment": "Calculates separate losses for each output head and combines them with weights."
    }
  }
  