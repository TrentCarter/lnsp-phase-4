{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "status_update.schema.json",
  "title": "Status Update",
  "description": "Schema for agent/job status update events (HMI PRD ยง7)",
  "type": "object",
  "required": ["job_id", "agent", "event", "ts"],
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Job/run identifier"
    },
    "agent": {
      "type": "string",
      "description": "Agent name"
    },
    "event": {
      "type": "string",
      "description": "Status event type (HMI PRD ยง18.1)",
      "enum": [
        "accepted",
        "started",
        "awaiting_approval",
        "approved",
        "rejected",
        "soft_timeout",
        "hard_timeout",
        "escalated",
        "completed"
      ]
    },
    "ts": {
      "type": "string",
      "description": "Timestamp (ISO 8601)",
      "format": "date-time"
    },
    "details": {
      "type": "object",
      "description": "Additional event-specific details",
      "additionalProperties": true
    },
    "llm_model": {
      "type": "string",
      "description": "LLM model name (if this agent uses an LLM)",
      "examples": [
        "ollama/qwen2.5-coder:7b-instruct",
        "anthropic/claude-3-7-sonnet",
        "openai/gpt-4o"
      ]
    },
    "llm_provider": {
      "type": "string",
      "description": "LLM provider (if applicable)",
      "enum": ["ollama", "anthropic", "openai", "deepseek", "local", "other"]
    },
    "parent_agent": {
      "type": "string",
      "description": "Parent agent name (for hierarchical tracking)"
    },
    "progress": {
      "type": "number",
      "description": "Task progress (0.0 to 1.0)",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": false
}
